@model PrivatePromotionCode

<input type="hidden" asp-for="Id" />
<input type="hidden" asp-for="PrivatePromotionId" />
<input type="hidden" asp-for="CreatedDate" />
<input type="hidden" asp-for="CurrentUseCode" />
<input type="hidden" asp-for="IsDeleted" />

<div class="form-group m-form__group row">
    <label class="col-lg-3 col-form-label">
        Mã
    </label>
    <div class="col-lg-4">
        <input class="form-control m-input" asp-for="Code" readonly />
    </div>
</div>
<div class="form-group m-form__group row">
    <label class="col-lg-3 col-form-label">
        Số lần sử dụng tối đa
    </label>
    <div class="col-lg-4">
        <input class="form-control m-input" placeholder="Số lần sử dụng tối đa" asp-for="MaxUseCode" />
    </div>
</div>
<div class="form-group m-form__group row">
    <label class="col-lg-3 col-form-label">Không giới hạn số lần</label>
    <div class="col-lg-4">
        <label class="m-checkbox m-checkbox--focus">
            <input asp-for="IsInfinityUse" />
            <span></span>
        </label>
    </div>
</div>
<div class="form-group m-form__group row">
    <label class="col-lg-3 col-form-label">
        Thời gian áp dụng
    </label>
    <div class="col-lg-9">&nbsp;</div>
</div>
<div class="form-group m-form__group row">
    <label class="col-lg-2 col-form-label">&nbsp;</label>
    <div class="col-lg-10">
        <div class="row">
            <div class="col-lg-6 row">
                <label class="col-lg-5 col-form-label">
                    Từ ngày
                </label>
                <div class="col-lg-7">
                    <input type="text" class="form-control m-input datepicker" name="StartDate" value="@Model.StartDate?.ToString("dd/MM/yyyy")" autocomplete="off" />
                </div>
            </div>
            <div class="col-lg-6 row">
                <label class="col-lg-5 col-form-label">
                    Đến ngày
                </label>
                <div class="col-lg-7">
                    <input type="text" class="form-control m-input datepicker" name="EndDate" value="@Model.EndDate?.ToString("dd/MM/yyyy")" autocomplete="off" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 row">
                <label class="col-lg-4 col-form-label">Không giới hạn thời gian</label>
                <div class="col-lg-3">
                    <label class="m-checkbox m-checkbox--focus">
                        <input asp-for="IsInfinityTime" />
                        <span></span>
                    </label>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="form-group m-form__group row">
    <label class="col-lg-3 col-form-label">
        Comment
    </label>
    <div class="col-lg-9">
        <textarea class="form-control m-input m-input--air" rows="3" asp-for="CodeComment"></textarea>
    </div>
</div>
<div class="form-group m-form__group row">
    <label class="col-lg-3 col-form-label">Hoạt động</label>
    <div class="col-lg-4">
        <label class="m-checkbox m-checkbox--focus">
            <input asp-for="Status" />
            <span></span>
        </label>
    </div>
</div>