@model NinjaSaiGon.Admin.Models.AccountViewModels.EditUserViewModel
@{
    ViewData["Title"] = "Sửa thông tin người dùng";
}

<div class="m-grid__item m-grid__item--fluid m-wrapper">
    <div class="m-content">
        <div class="m-portlet m-portlet--mobile">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text">
                            Sửa thông tin người dùng
                        </h3>
                    </div>
                </div>
            </div>
            <div class="m-portlet__body">
                <form asp-action="Edit" asp-controller="Account" class="m-form m-form--label-align-right">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @Html.HiddenFor(model => model.Id)
                    <div class="m-portlet__body">
                        <div class="form-group m-form__group row">
                            <label class="col-lg-2 col-form-label">
                                Tên đăng nhập
                            </label>
                            <div class="col-lg-6">
                                <input asp-for="UserName" class="form-control m-input" />
                                <span asp-validation-for="UserName" class="form-control-feedback"></span>
                            </div>
                        </div>
                        <div class="form-group m-form__group row">
                            <label class="col-lg-2 col-form-label">
                                Email
                            </label>
                            <div class="col-lg-6">
                                <input asp-for="Email" class="form-control m-input" />
                                <span asp-validation-for="Email" class="form-control-feedback"></span>
                            </div>
                        </div>
                        <div class="form-group m-form__group row">
                            <label class="col-lg-2 col-form-label">
                                Điện thoại
                            </label>
                            <div class="col-lg-6">
                                <input asp-for="PhoneNumber" class="form-control m-input" />
                                <span asp-validation-for="PhoneNumber" class="form-control-feedback"></span>
                            </div>
                        </div>

                        <div class="form-group m-form__group row">
                            <label class="col-lg-2 col-form-label">
                                Phân quyền
                            </label>
                            <div class="col-lg-6">
                                <select name="SelectedRole" asp-items="Model.RolesList" class="form-control m-input m-input--square"></select>
                            </div>
                        </div>
                    </div>
                    <div class="m-portlet__foot m-portlet__foot--fit">
                        <div class="m-form__actions m-form__actions">
                            <div class="row">
                                <div class="col-lg-2"></div>
                                <div class="col-lg-6">
                                    <input type="submit" value="Submit" class="btn btn-primary" />
                                    <a asp-action="Management">Quay lại danh sách</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            SetActiveMenu('accountMenu');
        });
    </script>
}