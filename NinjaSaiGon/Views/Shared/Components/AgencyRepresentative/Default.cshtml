@model AgencyRepresentativeViewModel

<tr class="ar-item" data-index="@Model.Index">
    <td>@Model.EmployeeName</td>
    <td class="text-center"><input type="checkbox" class="m-checkbox--solid m-checkbox--brand" name="AgencyRepresentatives[@Model.Index].IsMainContact" @(Model.IsMainContact ? "checked" : "") /></td>
    <td>@Model.EmployeePosition</td>
    <td>@Model.EmployeePhone</td>
    <td>@Model.EmployeeEmail</td>
    <td>
        <a data-index="@Model.Index" class="m-portlet__nav-link btn m-btn m-btn--hover-danger m-btn--icon m-btn--icon-only m-btn--pill btnDeleteAR">
            <i class="la la-trash"></i>
        </a>
        <input type="hidden" name="AgencyRepresentatives[@Model.Index].AgencyId" value="@Model.AgencyId">
        <input type="hidden" name="AgencyRepresentatives[@Model.Index].PersonId" value="@Model.PersonId">
        <input type="hidden" class="IsDeleteAR" data-index="@Model.Index" name="AgencyRepresentatives[@Model.Index].IsDeleted" value="false">
    </td>
</tr>