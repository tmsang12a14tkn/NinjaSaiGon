                            <tr class="text-center">
                                <th>Tổng</th>
                                <th>Ly gốc</th>
                                <th>Ly Khuyễn mãi</th>
                                <th>Ly tặng</th>
                                <th>Cafe</th>
                                <th>Trà</th>
