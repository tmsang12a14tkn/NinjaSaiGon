                                <th rowspan="2"></th>
                                <th rowspan="2">Đơn hàng</th>
                                <th colspan="4">Số ly</th>
                                <th colspan="7">Nhóm món</th>
                                <th rowspan="2">Tổng tiền</th>
                                <th rowspan="2">Giảm giá</th>
